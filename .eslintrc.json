{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb",
        "prettier",
        "prettier/react",
        "plugin:prettier/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "prettier"
    ],
    "rules": {
        "linebreak-style":0,
        "quotes": 2,
        "object-curly-spacing": 2,
        "react/require-default-props": [
            0,
            {
                "forbidDefaultForRequired": 0
            }
        ],
        "react/sort-comp": [
            2,
            {
                "order": [
                    "type-annotations",
                    "static-methods",
                    "life-cycle",
                    "everything-else",
                    "render"
                ]
            }
        ],
        "react/no-unused-prop-types": 0,
        "react/jsx-props-no-spreading": 0,
        "react/jsx-filename-extension": [
            1, 
            { 
                "extensions": [
                    ".js", ".jsx"
                ] 
            }
        ],
        "import/prefer-default-export": 0
    }
}
